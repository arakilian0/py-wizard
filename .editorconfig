root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{py}]
indent_style = space
indent_size = 4

[*.{yml}]
indent_style = space
indent_size = 2

[*.{bat}]
end_of_line = crlf

[test/win/**.py]
end_of_line = crlf

[*.{md,txt}]
trim_trailing_whitespace = false
insert_final_newline = false
